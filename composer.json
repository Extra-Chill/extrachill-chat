{
    "name": "chubes4/extrachill-chat",
    "description": "Simple AI chatbot for chat.extrachill.com",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Chris Huber",
            "email": "chris@chubes.net"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "scripts": {
        "lint:php": "phpcs --standard=WordPress --extensions=php --ignore=vendor .",
        "lint:fix": "phpcbf --standard=WordPress --extensions=php --ignore=vendor .",
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}